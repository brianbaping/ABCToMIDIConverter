<Window x:Class="ABCToMIDIConverter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ABC to MIDI Converter" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="ABC to MIDI Converter" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- ABC Input -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <ScrollViewer>
                <TextBox Name="AbcTextBox" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         FontFamily="Consolas"
                         Text="X:1&#x0A;T:Test Tune&#x0A;C:Anonymous&#x0A;M:4/4&#x0A;L:1/4&#x0A;K:C&#x0A;"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,10">
            <Button Name="ParseButton" Content="Parse ABC" 
                    Padding="10,5" Margin="0,0,10,0" Click="ParseButton_Click"/>
            <Button Name="ConvertButton" Content="Convert to MIDI" 
                    Padding="10,5" Margin="0,0,10,0" Click="ConvertButton_Click"/>
            <Button Name="ClearButton" Content="Clear" 
                    Padding="10,5" Click="ClearButton_Click"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock Grid.Row="3" Name="StatusTextBlock" 
                   Text="Ready" Margin="0,10,0,5"
                   FontWeight="Bold"/>

        <!-- Output -->
        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <ScrollViewer>
                <TextBox Name="OutputTextBox" 
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         Background="LightGray"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>